{
  "package": {
    "dependencies": {
      "@testing-library/jest-dom": "^5.14.1",
      "@testing-library/react": "^12.0.0",
      "@testing-library/user-event": "^13.2.1",
      "@types/jest": "^27.0.1",
      "@types/node": "^16.7.13",
      "@types/react": "^17.0.20",
      "@types/react-dom": "^17.0.9",
      "typescript": "^4.4.2",
      "web-vitals": "^2.1.0",
      "autoprefixer": "^9.8.8",
      "postcss": "^7.0.39",
      "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.17",
      "@craco/craco": "^6.3.0",
      "@typescript-eslint/eslint-plugin": "^4.29.1",
      "@typescript-eslint/parser": "^4.29.1",
      "eslint": "^7.32.0",
      "react-router-dom": "^6.0.2",
      "@types/react-router-dom": "^5.3.2",
      "framer-motion": "^4.1.17",
      "fast-glob":  "^3.2.7",
      "fs-extra": "^10.0.0",
      "@types/fs-extra": "^9.0.13",
      "replaceall": "^0.1.6",
      "sass": "^1.43.4",
      "concurrently": "^6.3.0",
      "stylelint": "^14.1.0",
      "stylelint-config-standard-scss": "^2.0.1",
      "stylelint-config-octobox": "^0.0.1",
      "eslint-config-octobox": "^0.0.1",
      "chokidar-cli": "^3.0.0"

    },
    "scripts": {
      "start": "concurrently --kill-others \"npm run build-route-with-daemon\" \"npm run watch-sass\" \"craco start\"",
      "test": "npm run lint && craco test",
      "build": "npm run build-route && npm run build-sass && npm run build-es",
      "build-route": "echo Watching for route-associated file changes... && chokidar --initial --silent \"./src/pages/**/{Index.{tsx,jsx},[[]*.{tsx,jsx}}\" -c \"node octobox.js {event}\"",
      "build-sass": "sass src/styles/main.scss src/styles/main.css",
      "build-es": "craco build",
      "watch-sass": "sass --watch src/styles/main.scss src/styles/main.css",
      "lint": "npm run lint-sass && npm run lint-es",
      "lint-sass": "npx --yes stylelint \"**/*.scss\"",
      "lint-es": "eslint \"**/src/.{js,ts,jsx,tsx}\""
    },
    "eslintConfig": {
      "extends": ["react-app", "react-app/jest", ".eslintrc.js"]
    }
  }
}
